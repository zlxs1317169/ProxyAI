{
  "designSystem": {
    "name": "CodeBuddy Design System",
    "version": "1.0.0",
    "figmaFileKey": "your-figma-file-key-here",
    "colors": {
      "primary": {
        "50": "#eff6ff",
        "100": "#dbeafe",
        "500": "#3b82f6",
        "900": "#1e3a8a"
      },
      "secondary": {
        "50": "#f8fafc",
        "100": "#f1f5f9",
        "500": "#64748b",
        "900": "#0f172a"
      },
      "success": {
        "50": "#f0fdf4",
        "500": "#22c55e",
        "900": "#14532d"
      },
      "error": {
        "50": "#fef2f2",
        "500": "#ef4444",
        "900": "#7f1d1d"
      }
    },
    "typography": {
      "fontFamily": {
        "sans": ["Inter", "system-ui", "sans-serif"],
        "mono": ["JetBrains Mono", "monospace"]
      },
      "fontSize": {
        "xs": "0.75rem",
        "sm": "0.875rem",
        "base": "1rem",
        "lg": "1.125rem",
        "xl": "1.25rem",
        "2xl": "1.5rem",
        "3xl": "1.875rem"
      }
    },
    "spacing": {
      "1": "0.25rem",
      "2": "0.5rem",
      "3": "0.75rem",
      "4": "1rem",
      "5": "1.25rem",
      "6": "1.5rem",
      "8": "2rem",
      "10": "2.5rem",
      "12": "3rem"
    },
    "borderRadius": {
      "none": "0",
      "sm": "0.125rem",
      "md": "0.375rem",
      "lg": "0.5rem",
      "xl": "0.75rem",
      "full": "9999px"
    },
    "components": {
      "button": {
        "primary": {
          "backgroundColor": "var(--color-primary-500)",
          "color": "white",
          "padding": "var(--spacing-3) var(--spacing-6)",
          "borderRadius": "var(--border-radius-md)"
        },
        "secondary": {
          "backgroundColor": "var(--color-secondary-100)",
          "color": "var(--color-secondary-900)",
          "padding": "var(--spacing-3) var(--spacing-6)",
          "borderRadius": "var(--border-radius-md)"
        }
      }
    }
  }
}